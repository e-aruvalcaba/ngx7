{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipDefaultLibCheck": true,
      "lib": [ "es6", "dom" ],
      "types": [ "node" ]
    },
    "exclude": [ "bin", "node_modules", "dist" ],
    "include": [
          "src/**/*.ts"
      ],
    "atom": { "rewriteTsconfig": false }
  }
  